{% extends 'base.html.twig' %}

{% block title %}Items index{% endblock %}

{% block body %}
    <h1>Items index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Link</th>
                <th>Title</th>
                <th>Data</th>
                <th>Posted</th>
                <th>Approved</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.link }}</td>
                <td>{{ item.title }}</td>
                <td>{{ item.data }}</td>
                <td>{{ item.posted }}</td>
                <td>{{ item.approved }}</td>
                <td>
                    <a href="{{ path('items_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('items_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('items_new') }}">Create new</a>
{% endblock %}