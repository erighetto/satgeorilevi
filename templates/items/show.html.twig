{% block title %}Items{% endblock %}

{% block body %}
    <h1>Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ item.link }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ item.title }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ item.data }}</td>
            </tr>
            <tr>
                <th>Posted</th>
                <td>{{ item.posted }}</td>
